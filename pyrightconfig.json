{
    "include": [
      "."
    ],

    "exclude": [
      "**/node_modules",
      "**/__pycache__",
      "src/experimental",
      "src/typestubs"
    ],

    "ignore": [
      "./alembic",
      "routes/program_spec",
      "utilities/rolemanager"
    ],

    "defineConstant": {
      "DEBUG": true
    },

    "stubPath": "stubs",

    "reportMissingImports": true,
    "reportMissingTypeStubs": false,

    "pythonVersion": "3.9",
    "pythonPlatform": "Linux",

    "executionEnvironments": [
      {
        "root": "src/web",
        "pythonVersion": "3.5",
        "pythonPlatform": "Windows",
        "extraPaths": [
          "src/service_libs"
        ]
      },
      {
        "root": "src/sdk",
        "pythonVersion": "3.0",
        "extraPaths": [
          "src/backend"
        ]
      },
      {
        "root": "src/tests",
        "extraPaths": [
          "src/tests/e2e",
          "src/sdk"
        ]
      },
      {
        "root": "src"
      }
    ]
  }
